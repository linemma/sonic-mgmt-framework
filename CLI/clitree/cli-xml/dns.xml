<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >

  <VIEW name="enable-view">
    <COMMAND name="show hosts" help="IP name servers">
      <ACTION builtin="clish_pyobj">sonic_cli_dns get_sonic_dns_hosts</ACTION>
    </COMMAND>
  </VIEW>

  <VIEW name="configure-view">
    <COMMAND name="ip name-server"
             help="Configure the name server address"
             ptype="SUBCOMMAND"
             mode="subcommand">
      <PARAM name="nameserver"
             help="Domain name server"
             ptype="IPV4V6_ADDR">
      </PARAM>
      <ACTION builtin="clish_pyobj">sonic_cli_dns patch_openconfig_dns_server_address ${nameserver}</ACTION>
    </COMMAND>

    <COMMAND name="ip name-server source-ip"
             help="Configure source IP to reach the name server"
             ptype="SUBCOMMAND"
             mode="subcommand">
      <PARAM name="src-ip"
             help="Source IP address for DNS query"
             ptype="IPV4V6_ADDR">
      </PARAM>
      <ACTION builtin="clish_pyobj">sonic_cli_dns patch_openconfig_dns_global_config_source_address ${src-ip}</ACTION>
    </COMMAND>

    <COMMAND name="no ip name-server"
             help="Configure the name server address"
             ptype="SUBCOMMAND"
             mode="subcommand">
      <PARAM name="nameserver"
             help="Domain name server"
             ptype="IPV4V6_ADDR">
      </PARAM>
      <ACTION builtin="clish_pyobj">sonic_cli_dns delete_openconfig_dns_server_address ${nameserver}</ACTION>
    </COMMAND>
 
    <COMMAND name="no ip name-server source-ip"
             help="Configure source IP to reach the name server"
             ptype="SUBCOMMAND"
             mode="subcommand">
      <PARAM name="src-ip"
             help="Source IP address for DNS query"
             ptype="IPV4V6_ADDR">
      </PARAM>
      <ACTION builtin="clish_pyobj">sonic_cli_dns delete_openconfig_dns_global_config_source_address ${src-ip}</ACTION>
    </COMMAND>
     
  </VIEW>

</CLISH_MODULE>
